<section class="section">
  <div class="container">
    <h2 class = "text-center">Forgot your password?</h2>

    <div class="form flex flex-column p-1 mt-2">
      <p class = "mb-4"> Donâ€™t worry. you can receive the instructions to reset your password </p>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": "false", method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-4">
          <%= f.label :email, class: "content-xs overline" %>
          <div class="input__container">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input__content" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Send", class: "button button--secondary w-full" %>
        </div>
      <% end %>
    </div>
  </div>
</section>

