<section class="section">
  <div class="container">
    <h2 class="text-center">Edit <%= resource_name.to_s.humanize %></h2>

    <div class="form flex flex-column p-1 mt-2" data-turbo = "false">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
           <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field mb-2">
            <%= f.label :username, class: "content-xs overline" %><br />
            <div class="input__container">
              <%=f.text_field :username, autofocus: true, class: "input__content"%>
            </div>
          </div>

          <div class="field mb-2">
            <%= f.label :email, class: "content-xs overline" %><br />
            <div class="input__container">
              <%=f.email_field :email, autofocus: true, autocomplete: "email", class: "input__content"%>
            </div>
          </div>

          <div class="field mb-2">
            <%= f.label :password, class: "content-xs overline" %>
            <% if @minimum_password_length %>
            <em class="content-xs overline">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <div class="input__container <%= !resource.errors.messages[:password].empty? && 'border-error'%>">
              <%= f.password_field :password, placeholder: "********", autocomplete: "new-password", class: "input__content"%>
            </div>
          </div>

          <div class="field mb-2">
            <%= f.label :password_confirmation, class: "content-xs overline" %>
            <div class="input__container <%= !resource.errors.messages[:password_confirmation].empty? && 'border-error'%>">
              <%= f.password_field :password_confirmation, placeholder: "********", autocomplete: "new-password", class: "input__content"%>
            </div>
          </div>

          <div class="field mb-2">
            <%= f.label :birthdate, class: "content-xs overline" %>
            <div class="input__container">
              <%= f.text_field :birth_date, autocomplete: "new-birthdate", class: "input__content"%>
            </div>
          </div>

          <div class="field mb-2">
            <%= f.label :first_name, class: "content-xs overline" %>
            <div class="input__container">
              <%= f.text_field :first_name, autocomplete: "new-first_name", class: "input__content"%>
            </div>
          </div>

          <div class="field mb-2">
            <%= f.label :last_name, class: "content-xs overline" %>
            <div class="input__container">
              <%= f.text_field :last_name, autocomplete: "new-last_name", class: "input__content"%>
            </div>
          </div>

          <div class="field mb-4">
            <%= f.label :current_password, class: "content-xs overline" %>
            <div class="input__container <%= !resource.errors.messages[:current_password].empty? && 'border-error'%>">
              <%= f.password_field :current_password, placeholder: "********", autocomplete: "current-password", class: "input__content"%>
            </div>
          </div>

          <div class="actions mb-4">
            <%= f.submit "Update account", class: "button button--secondary w-full" %>
          </div>
      <% end %>
      <%= link_to "Back", :back, class: "button-back"%>
  </div>
</section>
